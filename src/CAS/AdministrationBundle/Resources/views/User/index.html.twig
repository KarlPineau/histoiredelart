{% extends "CASAdministrationBundle::layout.html.twig" %}

{% block title %}
    Utilisateurs - {{ parent() }}
{% endblock %}

{% block breadcrumb %}
    {{ parent() }}
{% endblock %}

{% block h1 %}
    Utilisateurs
{% endblock %}

{% block brandtitle %}
    Utilisateurs
{% endblock %}

{% block h1_extend %}
    <a href="{{ path('cas_administration_user_generatePreferences') }}" class="btn btn-primary">Génération UserPreferences</a>
    <a href="{{ path('cas_administration_user_generateUsernames') }}" class="btn btn-primary">Génération Username</a>
    {{ knp_pagination_render(users) }}
{% endblock %}

{% block content %}
    <div class="row">
        <section id="content" class="col-lg-12">
            {% for flashMessage in app.session.flashbag.get('notice') %}
                <div class="alert alert-success">
                    {{ flashMessage }}
                </div>
            {% endfor %}

            <table class="table table-bordered table-striped">
                <caption>{{ users.getTotalItemCount }}</caption>
                <tr>
                    <th>#</th>
                    <th>Mail</th>
                    <th>Actions</th>
                </tr>
                {% for user in users %}
                <tr>
                    <td>{{ ((users.getPaginationData.current-1)*100)+loop.index }}</td>
                    <td>{{ user.email }}</td>
                    <td><a href="{{ path('cas_administration_user_view', {'id': user.id}) }}" class="btn btn-default"><span class="glyphicon glyphicon-user"></span></a></td>
                </tr>
                {% endfor %}
            </table>
            <div class="text-center">{{ knp_pagination_render(users) }}</div>
        </section>
    </div>
{% endblock %}
