{# src/DATA/DataBundle/Resources/views/Artwork/register_content.html.twig #}
{% form_theme form 'bootstrap_3_layout.html.twig' %}
<form class="form-horizontal" method="post" {{ form_enctype(form) }} role="form">
    {% if not form.vars.valid %}
    <div class="alert alert-error">
        <strong>Votre formulaire contient les erreurs suivantes :</strong>
        {{ form_errors(form) }}
        {{ form_errors(form.histoiredelartNewsletter) }}
        {{ form_errors(form.dataDatasetConfirmation) }}
        {{ form_errors(form.dataReportingConfirmation) }}
        {{ form_errors(form.clichesReportingConfirmation) }}
    </div>
    <br />
    {% endif %}
    
    <fieldset>
        <legend>Préférences mail :</legend>

        <div class="form-group">
            <div class="col-md-6 text-right">
                {{ form_label(form.histoiredelartNewsletter, "Recevoir la newsletter de histoiredelart.fr:", {'label_attr': {'class': ''}}) }}
            </div>
            <div class="col-md-6">
                {{ form_widget(form.histoiredelartNewsletter) }}
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-6 text-right">
                {{ form_label(form.dataDatasetConfirmation, "Recevoir une confirmation par mail lorsqu'un jeu de données que j'ai importé a été traité :", {'label_attr': {'class': ''}}) }}
            </div>
            <div class="col-md-6">
                {{ form_widget(form.dataDatasetConfirmation) }}
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-6 text-right">
                {{ form_label(form.dataReportingConfirmation, "Recevoir une confirmation par mail lorsqu'une de mes suggestions a été traitée sur DATA :", {'label_attr': {'class': ''}}) }}
            </div>
            <div class="col-md-6">
                {{ form_widget(form.dataReportingConfirmation) }}
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-6 text-right">
                {{ form_label(form.clichesReportingConfirmation, "Recevoir une confirmation par mail lorsqu'une de mes suggestions a été traitée sur Clichés! :", {'label_attr': {'class': ''}}) }}
            </div>
            <div class="col-md-6">
                {{ form_widget(form.clichesReportingConfirmation) }}
            </div>
        </div>
    </fieldset>
        <br />
    {{ form_rest(form) }}
    <div class="text-center"><input type="submit" class="btn btn-default" /></div>
</form>