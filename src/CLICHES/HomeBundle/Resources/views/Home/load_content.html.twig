{# src/CLICHES/HomeBundle/Resources/views/Session/load_content.html.twig #}

<form class="form-horizontal text-center" action="{{ path('cliches_home_home_load') }}"  method="post" {{ form_enctype(form) }} role="form">
    {% if not form.vars.valid %}
    <div class="alert alert-error">
        <strong>Votre formulaire contient les erreurs suivantes :</strong>
        {{ form_errors(form) }}
        {{ form_errors(form.teaching) }}
        {{ form_errors(form.mode) }}
    </div>
    <br />
    {% endif %}

    <div class="form-group">
        {{ form_label(form.teaching, "Matière :", {'label_attr': {'class': 'sr-only control-label'}}) }}
        <div class="col-xs-10 col-xs-offset-1">
            {{ form_widget(form.teaching, {'attr': {'class': 'form-control'}}) }}
        </div>
    </div>
    <br />
    <div class="row">
        <div class="form-group">
            {{ form_label(form.mode, "Niveau :", {'label_attr': {'class': 'sr-only control-label'}}) }}
            {{ form_widget(form.mode) }}
            <span class="glyphicon glyphicon-question-sign"
                  style="cursor: pointer;"
                  data-content="Le mode Normal vous propose des choix de réponse à cocher (façon QCM).<br />Le mode Élevé vous demande d'inscrire en toutes lettres chaque réponse.<br />Le mode Examen vous laisse 10 minutes pour composer sur une feuille de papier votre propre commentaire d'oeuvre."
                  data-toggle="popover"
                  data-html="true"
                  title="Modes" ></span>
        </div>
    </div>
    <br />
    {{ form_rest(form) }}
    <div class="text-center"><input type="submit" class="btn btn-lg btn-success" value="Et c'est parti !" /></div>
</form>