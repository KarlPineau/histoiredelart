{% extends "CLICHESLayoutBundle::layout.html.twig" %}

{% block title %}
    Parties privées - {{ parent() }}
{% endblock %}

{% block brandtitle %}
    Parties privées
{% endblock %}

{% block h1 %}
    Mes parties privées :
{% endblock %}

{% block h1_extend %}
    <a href="{{ path('cliches_personalplace_privateplayer_register') }}" class="btn btn-primary"><span class="glyphicon glyphicon-plus"></span> Nouvelle</a>
{% endblock %}

{% block breadcrumb %}
    {{ parent() }}
    <li><a href="{{ path('fos_user_profile_show') }}">Mon compte</a></li>
    <li class="active">Parties privées</li>
{% endblock %}

{% block content %}
    <section class="jumbotron">
        <h2>Ci-dessous, vos parties privées.</h2>
    </section>
    <ul>
        {% for privatePlayer in privatePlayers %}
            <li><a href="{{ path('cliches_personalplace_privateplayer_view', {'id': privatePlayer.id}) }}">{{ privatePlayer.title }}</a></li>
        {% else %}
            <li class="text-info">Pas de partie pour le moment</li>
        {% endfor %}
    </ul>
{% endblock %}
