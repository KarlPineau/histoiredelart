{% extends "DATAAdministrationBundle::layout.html.twig" %}

{% block title %}Visualisation - {{ parent() }}{% endblock %}

{% block h1 %}Visualisation{% endblock %}

{% block breadcrumb %}
    {{ parent() }}
    <li class="active">Visualisation</li>
{% endblock %}

{% block content %}
    {% for flashMessage in app.session.flashbag.get('notice') %}
        <div class="alert alert-success">
            {{ flashMessage }}
        </div>
    {% endfor %}

    <h2>#1 -- Remplissage des champs pour Artwork :</h2>
    <canvas id="artwork" width="450" height="200"></canvas>

    <h2>#2 -- Remplissage des champs pour Building :</h2>
    <canvas id="building" width="450" height="200"></canvas>


    <h2>#3 -- Remplissage des champs pour View :</h2>
{% endblock %}

{% block javascript_sub %}
    <script src="//cdnjs.cloudflare.com/ajax/libs/Chart.js/2.1.3/Chart.bundle.js"></script>
    {% javascripts  '@DATAAdministrationBundle/Resources/public/js/visualization.js'  %}
    <script type="text/javascript" src="{{ asset_url }}"></script>
    {% endjavascripts %}
{% endblock %}
