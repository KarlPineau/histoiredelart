{# src/DATA/DataBundle/Resources/views/Artwork/register.html.twig #}
 
{% extends "DATADataBundle::layout.html.twig" %}

{% block title %}
    Edition - {{ parent() }}
{% endblock %}
    
{% block h1 %}
    Edition :
{% endblock %}

{% block breadcrumb %}
    {{ parent() }}
    <li><a href="{{ path('data_data_entity_index') }}">Items</a></li>
    <li><a href="{{ path('data_data_entity_view', {'id': data_data_entity_service.getPure(entity).id}) }}">{{data_data_entity_service.getName(entity)}}</a></li>
    <li class="active">Edition</li>
{% endblock %} 

{% block content %}
<div class="row">
    <section id="content" class="col-lg-12">
        {% for flashMessage in app.session.flashbag.get('notice') %}
            <div class="alert alert-success">
                {{ flashMessage }}
            </div>
        {% endfor %}
        
        <div class="well">
            {% include "DATADataBundle:Artwork:Edit/edit_content.html.twig" %}
        </div>
    </section>
</div>
{% endblock %}
