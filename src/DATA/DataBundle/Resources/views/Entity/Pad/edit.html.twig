{# src/DATA/DataBundle/Resources/views/Entity/edit.html.twig #}
 
{% extends "DATADataBundle::layout.html.twig" %}

{% block title %}
    Bloc-Note - {{ parent() }}
{% endblock %}
    
{% block h1 %}
    Edition Bloc-Note :
{% endblock %}

{% block breadcrumb %}
    {{ parent() }}
    <li><a href="{{ path('data_data_entity_index') }}">Items</a></li>
    <li><a href="{{ path(data_data_entity_routing_service.getRoutingView(), {'id': entity.id}) }}">{{ data_data_entity_service.getName(entity) }}</a></li>
    <li class="active">Edition Bloc-Note</li>
{% endblock %} 

{% block content %}
<div class="row">
    <section id="content" class="col-lg-12">
        {% for flashMessage in app.session.flashbag.get('notice') %}
            <div class="alert alert-success">
                {{ flashMessage }}
            </div>
        {% endfor %}
        
        <div class="well">
            {% include "DATADataBundle:Entity:Pad/edit_content.html.twig" %}
        </div>
    </section>
</div>
{% endblock %}
