{% if is_granted("IS_AUTHENTICATED_REMEMBERED") %}
    {% if privateSessions > 0 %}
        <form class="form-inline" style="display: inline-block;">
            <div class="input-group">
                <select class="form-control">
                    {% for privateSession in privateSessions %}
                        <option {% if ppid is defined and ppid == privateSession.id %}selected{% endif %}>{{ privateSession.title }}</option>
                    {% endfor %}
                </select>
                <div class="input-group-btn">
                    <button type="submit" class="btn {% if ppid is defined %}btn-primary{% else %}btn-default{% endif %}"><i class="fa fa-plus" aria-hidden="true"></i></button>
                </div>
            </div>
        </form>
    {% endif %}
{% endif %}