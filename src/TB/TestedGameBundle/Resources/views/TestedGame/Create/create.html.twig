{% extends "TBTestedGameBundle::layout.html.twig" %}

{% block title %}Nouveau TestedGame - {{ parent() }}{% endblock %}

{% block h1 %}Nouveau TestedGame{% endblock %}

{% block h1_extend %}
    <a class="btn btn-primary">Besoin d'aide ?</a>
{% endblock %}

{% block breadcrumb %}
    {{ parent() }}
    <li class="active">Nouveau</li>
{% endblock %}

{% block content %}
    {% for flashMessage in app.session.flashbag.get('notice') %}
        <div class="alert alert-success">
            {{ flashMessage }}
        </div>
    {% endfor %}

    {% include "TBTestedGameBundle:TestedGame:Create/create_content.html.twig" %}
{% endblock %}

{% block javascript_sub %}
    {% javascripts  '@TBTestedGameBundle/Resources/public/js/create.js' %}
        <script type="text/javascript" src="{{ asset_url }}"></script>
    {% endjavascripts %}
{% endblock %}
